---
layout: default
---
<div class="flex justify-between">
<div>
{% set previousPost = collections.media | getPreviousCollectionItem(page) %}
{% if previousPost %}
    <span><a href="{{ previousPost.url }}">&larr; {{ previousPost.data.title }}</a>
    </span>
{% endif %}
</div>
<div>
{% set nextPost = collections.media | getNextCollectionItem(page) %}
{% if nextPost %}
    <span><a href="{{ nextPost.url }}">{{ nextPost.data.title }} &rarr;</a>
    </span>
{% endif %}
</div>

</div>
<article class="max-w-5xl mx-auto">
    <header>
        <h1 class="text-4xl text-center leading-normal text-gray-00 mt-4">{{ title }}</h1>
        {% if writer %}
            <p class="text-center text-2xl">{{ writer }}</p>
        {% endif %}
{% if released %}
                <div class="text-center text-2xl">{{ released | safe }}</div>
                {% endif %}
        {% if tags %}
            <div class="mt-3 text-center">
                {% for tag in tags %}
                    <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-medium text-gray-700 m-0.5">#{{ tag }}</a>
                {% endfor %}
            </div>
        {% endif %}
        {% if thumb %}
            <div class="mt-10 -mx-7 md:mx-0">
                <img class="w-full  mx-auto mb-4" src="{{ thumb | url }}"  alt="This post thumbnail">
            </div>
            {% else %}
            <hr class="my-6">
        {% endif %}
    </header>
    <div id="content" class="prose text-gray-800 max-w-none prose prose-xl">
        {{ content | safe }}
    </div>
        <div class="my-10 italic">Published on {{ page.date | readableDate }}</div>


</article>

<div class="flex justify-between mt-12">
<div>
{% set previousPost = collections.all | getPreviousCollectionItem(page) %}
{% if previousPost %}
    <span><a href="{{ previousPost.url }}">&larr; {{ previousPost.data.title }}</a>
    </span>
{% endif %}
</div>
<div>
{% set nextPost = collections.all | getNextCollectionItem(page) %}
{% if nextPost %}
    <span><a href="{{ nextPost.url }}">{{ nextPost.data.title }} &rarr;</a>
    </span>
{% endif %}
</div>

</div>