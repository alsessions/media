{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}
<div>
<h1 class="text-4xl my-6 font-semibold">Books</h1>
</div>
<div class="flex flex-wrap">
{% for post in collections.all %}
<div class="w-full sm:w-1/2 xl:w-1/3 self-stretch p-2 mb-2 hover:bg-gray-100">
    <div class="rounded shadow-md pt-2 h-full">
        <a href="{{ post.url | url }}">
            <img class="w-full m-0 rounded-t lazy   h-96 object-cover" src="{{ lazyImage }}" data-src="{% if post.data.thumb %}{{ post.data.thumb | url }}{% else %}{{ '/assets/img/no-image.svg' | url }}{% endif %}" alt="This post thumbnail">
        </a>
        <div class="px-6 py-5">
            <div class="font-semibold text-lg ">
                <a class="text-gray-900 hover:text-gray-700" href="{{ post.url | url }}">{{ post.data.title }}</a>
            </div>
                        <p class="text-gray-700 italic mb-2">{{ post.data.writer }}</p>

            <p class="text-gray-800">
        
            
                {% if post.data.description %}
                {{ post.data.description }}
                {% else %}
                {{ post.templateContent | striptags | truncate(90, true) }}
                {% endif %}
            </p>
                         <div class="pt-2">

             {% for tag in post.data.tags %}
                    <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-medium text-gray-700 m-0.5">#{{ tag }}</a>
                {% endfor %}
                </div>
        </div>
    </div>
</div>
{% endfor %}
</div>
</diV>
